<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Patient Search</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-6 font-sans">

  <h1 class="text-3xl font-bold mb-6">Patient Search</h1>

  <!-- Search Form -->
  <form method="get" action="/patients" class="flex flex-col sm:flex-row gap-2 mb-6">
    <input 
      type="text" 
      name="name" 
      placeholder="Enter patient name" 
      value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>" 
      class="flex-1 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
    />
    <button 
      type="submit" 
      class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded"
    >
      Search
    </button>
  </form>

  <hr class="mb-6 border-gray-300" />

  <h2 class="text-2xl font-semibold mb-4">Search Results</h2>

  <!-- Table Container -->
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-blue-500 text-white">
        <tr>
          <th class="px-4 py-2 text-left">ID</th>
          <th class="px-4 py-2 text-left">Name</th>
          <th class="px-4 py-2 text-left">Contact</th>
          <th class="px-4 py-2 text-left">Date of Birth</th>
          <th class="px-4 py-2 text-left">Address</th>
          <th class="px-4 py-2 text-left">Email</th>
          <th class="px-4 py-2 text-left">Medical History</th>
          <th class="px-4 py-2 text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% const patientList = typeof patients !== 'undefined' ? patients : []; %>
        <% if (patientList.length === 0) { %>
          <tr>
            <td colspan="8" class="text-center py-4 text-gray-500">No patients found</td>
          </tr>
        <% } %>

        <% patientList.forEach(patient => { %>
          <tr class="hover:bg-gray-100 border-b">
            <td class="px-4 py-2"><%= patient.id %></td>
            <td class="px-4 py-2"><%= patient.name %></td>
            <td class="px-4 py-2"><%= patient.contactDetails %></td>
            <td class="px-4 py-2"><%= patient.dob ? patient.dob.toISOString().split('T')[0] : '' %></td>
            <td class="px-4 py-2"><%= patient.address %></td>
            <td class="px-4 py-2"><%= patient.email %></td>
            <td class="px-4 py-2"><%= patient.medicalHistory %></td>
            <td class="px-4 py-2 flex gap-2">
              <a href="/patients/<%= patient.id %>" class="text-blue-500 hover:underline">View</a>
              <a href="/patients/edit/<%= patient.id %>" class="text-green-500 hover:underline">Edit</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
